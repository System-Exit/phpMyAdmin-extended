<h2 id="message_header">Your Messages</h2>
<div id="message_sent_note" class="success hide">
    <p>Your message has been sent.</p>
</div>
<group id="message_send"><!-- begin message sending -->
    <h3>Send message:</h3>
    <form id="sendMessageForm" action="server_messages.php" method="post"><!-- Begin message input -->
        <input name="form_send_check" value="true" type="hidden" />
        <ul>
            <li>
                <textarea id="form_message" name="form_message" placeholder="Enter message here..."></textarea>
            </li>
            <li>
                <label for="Receiver">Receiver</label>
                <input title="Receiver" id="form_receiver" name="form_receiver" type="text" />
                <!-- input type="submit" value="Send" / -->
                <button id="message_form_send">Send</button>
            </li>
        </ul>
    </form>
</group>
<group id="message_received"><!-- Begin message display -->
    <h3>Received messages:</h3>
    <ul id="messageBox" class="message_box">
        <li id="no_messages" class="no_messages"><span>Getting messages...</span></li>
    </ul>
    <ul>
        <button id="updateMessages">Load More Messages</button>
    </ul>
</group>